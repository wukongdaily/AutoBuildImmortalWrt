CONFIG_TARGET_armsr=y
CONFIG_TARGET_armsr_armv8=y
CONFIG_TARGET_armsr_armv8_DEVICE_generic=y

# 基础系统
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_coremark=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_ubusd=y
CONFIG_PACKAGE_uclient-fetch=y

# LuCI 基础
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-mod-network=y
CONFIG_PACKAGE_luci-mod-status=y
CONFIG_PACKAGE_luci-mod-system=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-argon-config=y

# Web 终端
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_ttyd=y

# 防火墙（旁路由仍需）
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_luci-app-firewall=y

# 旁路由核心插件：Passwall2
CONFIG_PACKAGE_luci-app-passwall2=y
CONFIG_PACKAGE_passwall2=y
CONFIG_PACKAGE_passwall2-core=y
CONFIG_PACKAGE_passwall2-proxy=y
CONFIG_PACKAGE_passwall2-libs=y

# DNS 分流：MosDNS
CONFIG_PACKAGE_luci-app-mosdns=y
CONFIG_PACKAGE_mosdns=y

# 加速：TurboACC（可选）
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_turboacc=y

# Docker（可选）
# 如果你在 workflow 里选择 include_docker=yes，会自动加入
CONFIG_PACKAGE_luci-app-dockerman=y
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_containerd=y
CONFIG_PACKAGE_kmod-veth=y
CONFIG_PACKAGE_kmod-br-netfilter=y

# 去掉主路由功能（旁路由必须禁用）
CONFIG_PACKAGE_ppp=n
CONFIG_PACKAGE_pppoe=n
CONFIG_PACKAGE_ppp-mod-pppoe=n
CONFIG_PACKAGE_dnsmasq=n
CONFIG_PACKAGE_dnsmasq-full=n
CONFIG_PACKAGE_ipv6helper=n
CONFIG_IPV6=n

# 去掉不需要的 NAS、多媒体、打印机等
CONFIG_PACKAGE_samba4-libs=n
CONFIG_PACKAGE_samba4-server=n
CONFIG_PACKAGE_luci-app-samba4=n
CONFIG_PACKAGE_luci-app-minidlna=n
CONFIG_PACKAGE_luci-app-upnp=n
CONFIG_PACKAGE_luci-app-ddns=n
CONFIG_PACKAGE_luci-app-vlmcsd=n
CONFIG_PACKAGE_luci-app-nlbwmon=n
CONFIG_PACKAGE_luci-app-wol=n

# 去掉无线相关（N1 没有 WiFi）
CONFIG_PACKAGE_wpad-basic=n
CONFIG_PACKAGE_hostapd=n
CONFIG_PACKAGE_iw=n
CONFIG_PACKAGE_iwinfo=n

# 系统优化
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-tcp-bbr=y
CONFIG_PACKAGE_kmod-ipt-nat=y
CONFIG_PACKAGE_kmod-nf-nat=y
CONFIG_PACKAGE_kmod-nf-conntrack=y

# 旁路由网络模式：LAN Only
CONFIG_PACKAGE_luci-proto-static=y
CONFIG_PACKAGE_luci-proto-relay=y

# 保留 SSH
CONFIG_PACKAGE_dropbear=y
